<% layout("layout/boilerplate.ejs") %>

    <div class="col-md-8 m-auto mb-5">
        <h1 class="mb-5">Find a job & grow your career</h1>
        <form action="#" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="register_id">Registration ID:</label>
                <input class="form-control" type="text" id="register_id" name="student[register_id]" required>
                <div class=" valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="name">Name:</label>
                <input class="form-control" type="text" id="name" name="student[name]" required>
                <div class=" valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="phone_no">Phone No:</label>
                <input class="form-control" type="text" id="phone_no" name="student[phone_no]" required>
                <div class=" valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email:</label>
                <input class="form-control" type="email" id="email" name="student[email]" required>
                <div class=" valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password:</label>
                <input class="form-control" type="password" id="password" name="student[password]" required>
                <div class=" valid-feedback">
                    Looks good!
                </div>
            </div>
            <label class="form-label" for="gender">Gender:</label>
            <div class="mb-3 d-flex justify-content-between col-5">
                <div class="form-check ">
                    <input class=" form-check-input" type="radio" name="student[gender]" id="gender2" value="male">
                    <label class="form-check-label" for="gender2">
                        Male
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="student[gender]" id="gender3" value="female">
                    <label class="form-check-label" for="gender3">
                        Female
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="department">Department:</label>
                <input class="form-control" type="text" id="department" name="student[department]" required>
                <div class=" valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class=" mb-3">
                <label class="form-label" for="10th">10th Percentage</label>
                <div class="input-group">
                    <span class="input-group-text" id="10th-label">%</span>
                    <input type="number" class="form-control" id="10th" min="0" max="100" placeholder="0.00"
                        aria-label="percentage" aria-describedby="10th-label" name="student[10th]" required>
                </div>
            </div>
            <div class=" mb-3">
                <label class="form-label" for="12th">12th Percentage</label>
                <div class="input-group">
                    <span class="input-group-text" id="12th-label">%</span>
                    <input type="number" class="form-control" id="12th" min="0" max="100" placeholder="0.00"
                        aria-label="percentage" aria-describedby="12th-label" name="student[12th]" required>
                </div>
            </div>
            <div class=" mb-3">
                <label class="form-label" for="graduation">Graduation Percentage</label>
                <div class="input-group">
                    <span class="input-group-text" id="graduation-label">%</span>
                    <input type="number" class="form-control" id="graduation" min="0" max="100" placeholder="0.00"
                        aria-label="percentage" aria-describedby="graduation-label" name="student[graduation]" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="masters">Masters Percentage</label>
                <div class="input-group">
                    <span class="input-group-text" id="masters-label">%</span>
                    <input type="number" class="form-control" id="masters" min="0" max="100" placeholder="0.00"
                        aria-label="percentage" aria-describedby="masters-label" name="student[masters]" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="resume-url" class="form-label">Your Resume URL</label>
                <div class="input-group">
                    <input type="url" class="form-control" name="student[resume]" id="resume-url"
                        aria-describedby="resume-addon3 resume-addon4" required>
                </div>
                <div class=" valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class=" mb-3">
                <label class="form-label" for="year_of_passing">Year Of Passing </label>
                <div class="input-group">
                    <input type="number" class="form-control" maxlength="4" id="year_of_passing" pattern="[1-9][0-9]{3}"
                        placeholder="2000" aria-label="percentage" aria-describedby="year_of_passing-label"
                        name="student[year_of_passing]" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="skills">Skills:</label>
                <input class="form-control" type="text" id="skills" name="student[skills]" required>
                <div class=" valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-outline-success">Register</button>
        </form>
    </div>